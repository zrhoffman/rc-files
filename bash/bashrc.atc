  cb;

  curl_command='curl --verbose --silent --cookie-jar curl-jar --cookie curl-jar https://${TO_HOST}.${INFRA_SUBDOMAIN}.${TLD_DOMAIN}/api/2.0/';
  response="$(<<DOCKER_COMMANDS docker-compose exec -T mid sh;
    ${curl_command}'${route}' ${data_option} "\$(
      <<'POST_DATA' cat;
$data
POST_DATA
     )" $*;
DOCKER_COMMANDS
  )";
  #prettify_output "$response" "$data";
  echo "$response";
  );
}

