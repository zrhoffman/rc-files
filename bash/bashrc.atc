function cto()
{
  (
  set -o errexit -o nounset -o pipefail;
  route="$1";
  shift;

  cb;

  curl_command='curl --verbose --silent --cookie-jar curl-jar --cookie curl-jar https://${TO_HOST}.${INFRA_SUBDOMAIN}.${TLD_DOMAIN}/api/1.1/';
  response="$(<<DOCKER_COMMANDS docker-compose exec -T mid sh;
    ${curl_command}'${route}' $*;
DOCKER_COMMANDS
  )";
  prettify_output "$response";
  );
}

